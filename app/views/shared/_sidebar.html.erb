<div class="sidebar">
  <div class="sidebar-header">
    <%= link_to dashboard_path do  %>
      <%= render partial: "shared/logo" %>
    <% end %>
    <%= link_to user_path(current_user) do  %>
      <button class="avatar-dropdown" aria-haspopup="true" aria-controls="dropdown-menu">
        <%= image_tag 'placeholder.png', width: 75, height: 75 %>
      </button>
    <% end %>
    <%= render partial: "shared/sidebar/dropdown" %>
  </div>
  <div class="sidebar-content">
    <ul>
      <% current_user.teams.each do |team| %>
        <li>
          <%= link_to team.name, dashboard_team_path(team)  %>
          <ul>
            <% team.users.each do |user| %>
              <li>
                <%= user.full_name %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
